html, body
	margin 0
	padding 0

body
	height 100vh
	width 100vw
	background background

	
button
	cursor pointer
	background buttonBackground
	color buttonForeground
	margin 0
	white-space nowrap
	outline none
	border none
		
button:hover
	background: buttonHoverColor
	

// input[type=file]
// 	background modal

input[type=file]
	position: relative
	cursor pointer
	// width 200px
	// background modal

input[type=file]::-webkit-file-upload-button
	
	visibility: hidden
	// width 100%
	height 0

input[type=file]::before
	position: absolute
	left 0
	content: 'Upload'
	display: inline-block;
	background: linear-gradient(top, accent+#050505, accent - #050505);
	border: 1px solid rgba(black,0.3);
	color rgba(black, 0.9)
	box-shadow inset 0 0 2px 1px rgba(black,0.2)
	border-radius: 3px
	padding: 3px 10px
	white-space: nowrap
	-webkit-user-select: none



input[type=file]:hover::before
	box-shadow inset 0 0 3px 1px rgba(black,0.4)

