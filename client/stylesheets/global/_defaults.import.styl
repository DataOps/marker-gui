.whole
	col(1)

.half
	col(1/2)

.third
	col(1/3)
	
.two-third
	col(2/3)

.narrow
	center(500px)

.mid-width
	center(600px)

.middle
	vertical-align middle

.main-width
	center(1200px)

.swirly
	font-family pacifico

.accent
	color accent

.accent-bg
	background-color: accent

.bg
	background-size cover
	background-repeat no-repeat
	background-position center center
	&.texture
		background-size auto auto
		background-repeat repeat
		
	&.bottom
		background-size 100% auto
		z-index -1
		// position fixed
		// width 100vw
		// height 100vh
			
	&.full
		position absolute
		width 100%
		height 100%
		top 0
		left 0
		

	background-position center bottom


.skinny
	font-weight 200

.nm
	margin 0


.bold
	font-weight bold

.mt
	margin-top 1.4em
.mt2
	margin-top 2.4em

.no-mb
	margin-bottom 0

.no-mt
	margin-top 0

.inline
	display: inline-block

.subtle
	color subtle

.pr
	padding-right 20px

.pt
	padding-top 20px
	
.plr
	padding-left 20px
	padding-right 20px

.small
	font-size .9em

.small-plus
	font-size 1.4em


.medium
	font-size 1.2em
	
.large
	font-size 3.0em

.absolute
	position absolute
	
.right
	float right
	
.bottom
	bottom 0

.parent-height
	height 100%

.absTopRight
	position absolute
	top 0
	right 0
	
.vertical-align
	position relative
	top 50%
	transform translateY(-50%)

.center-center
	align(b)

.text-button
	border 0
	background none
	color modal

.center
	text-align center
	
.uppercase
	text-transform uppercase

.spaced
	letter-spacing 5px
	&.large
		letter-spacing 10px

.portrait-frame
	border-radius 50%
	background-size cover
	border 4px solid white
	box-shadow 0 0 2px 1px rgba(black, 0.3)
	width 150px
	height 150px

.foreground
	color foreground

.inline-list
	margin 0
	padding 0
	li
		display inline-block
		a
			text-decoration none
			&:hover
				text-decoration underline
				
.z-high
	z-index 100

.relative
	position relative
	
.btn-padding
	padding 1em
	
.hundred
	height 100px
	
.tooltip 
	z-index 1001
	background #424242
	color #e2e2e2
	pointer-events none
	transition opacity .1s ease-out
	opacity 0
	padding 1em
	
	&.hide
		opacity 0

  	&.show
		opacity 1
