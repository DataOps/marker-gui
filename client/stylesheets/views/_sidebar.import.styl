.sidebar
	transition 0.5s
	width 0vw
	height 100vh
	position absolute
	top 0
	left 0
	background darkColor
	box-shadow 5px 0 20px black
	
	.edit
		position absolute
		left 100%
		margin 30px
		opacity 0.5
	.edit:hover
		background buttonColor
		opacity 1
		
	.top-btn
		position absolute
		left -200px
		top 2vh
		background buttonColor2
		border-color buttonBorderColor2
		
	.top-btn:hover
		background buttonHoverColor2
		
	.top-btn-active
		background buttonHoverColor2
		text-decoration underline
		
	.text
		transform translateX(calc(-50% + 75px))
		border-radius 0 10px 10px 0
		border-left 1px solid buttonBorderColor2
		
	.gui
		transform translateX(calc(-50% - 75px))
		border-radius 10px 0 0 10px
		border-right 1px solid buttonBorderColor2
		
	.bot-btn
		z-index 5
		position absolute
		bottom 3vh
		
	.import
		left -200px
		margin-left 30px
		
	.shoot
		right 0
		margin-right 30px

	#editor
		height calc(100% - 140px - 5vh)
		width 90%;
		margin calc(2vh+70px) auto

.show-sidebar
	width 40vw

